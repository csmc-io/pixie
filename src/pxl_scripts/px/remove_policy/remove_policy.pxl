import px
import pxmcp
import pxviews
import pxllm

def remove_tool_policy(tool_name: str):
    policy_name = "deny-" + tool_name + "-call"

    pxmcp.delete_agent_config(pxviews.get_mcp_policy_name(policy_name))
    df = pxviews.mcp_policies()
    return df
