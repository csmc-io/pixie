import px
import pxviews
import pxmcp
import pxllm

def block_single_tool(tool_name: str):
    policy_name = "deny-" + tool_name + "-call"
    df = pxviews.mcp_policies()
    pxmcp.create_mcp_policy("all",  pxviews.get_mcp_policy_name(policy_name), pxviews.template_mcp_single_tool_policy(tool_name))

    return df
